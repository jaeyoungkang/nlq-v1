# =================================
# nlq-v1 Backend 환경 변수 예시 파일
# =================================
# 이 파일을 .env.local로 복사하고 실제 값으로 수정하세요
# 🔥 Firestore 마이그레이션 완료 - BigQuery는 쿼리 실행만 사용

# LLM 설정
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Cloud 설정 (필수)
GOOGLE_CLOUD_PROJECT=your-project-id

# Firestore 설정 (데이터 저장용 - 새로 추가)
# 로컬 개발 시 Firestore Emulator 사용 (선택적)
# FIRESTORE_EMULATOR_HOST=localhost:8080
# 프로덕션 환경용 서비스 계정 키 (선택적)
# GOOGLE_APPLICATION_CREDENTIALS=./path-to-your-service-account-key.json

# BigQuery 설정 (쿼리 실행 전용만 유지)
# ⚠️  더 이상 데이터 저장용으로 사용하지 않음
# BIGQUERY_LOCATION, BIGQUERY_DATASET 환경변수 제거됨

# Flask 애플리케이션 설정
FLASK_ENV=development  # or production
FLASK_DEBUG=True
FLASK_PORT=8080

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Google OAuth 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT 설정
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1시간 (초 단위)
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30일 (초 단위)

# 사용자 제한 설정
DAILY_USAGE_LIMIT=5  # 비인증 사용자 일일 제한

